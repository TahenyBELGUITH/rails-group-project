<div class='foods_page'>
<div class='foods_header'>
  <h1>LIST OF FOODS</h1>
  <%= link_to "New Food", new_food_path %>
</div>
<div class='foods_list'>
<table>
  <tr>
    <th>Name</th>
    <th>Qauantity</th>
    <th>Measure Unit</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
  <% @foods.each do | food | %>
   <tr>
   <td><%= food.name%></td>
    <td><%= food.quantity%></td>
    <td><%= food.measurement_unit%></td>
    <td><%= food.price%></td>
    <td><%= link_to 'Delete', food_path(food),  data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?" }%>
    </td>

  </tr>
  <% end %>
</table>
</div>
</div>
