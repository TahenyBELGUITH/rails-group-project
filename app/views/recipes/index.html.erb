<div class="container">
            <div class = "recipes-list">
  <%=link_to 'New Recipes', new_recipe_path, class:"btn btn-primary mt-4" %>
  <div class="container-fluid w-100 p-0">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe.id), id: "#{recipe.id}" do %>
        <div class="w-100 row border border-dark my-2 mx-0 p-3">
          <div class="col-sm-6">
            <h5 class="card-title display-4"><%= recipe.name %> </h5>

             <%= link_to 'Delete', recipe_path(recipe),  data: {
             turbo_method: :delete,
             turbo_confirm: "Are you sure?" },
             class:"btn btn-danger"%>

        </div>
        <div class="col-sm-6">
            <h5 class="card-title"><%= recipe.name %></h5>
              <p class="card-text"><%= recipe.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

</div>