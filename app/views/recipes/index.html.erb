<br><br><div class="container" align="center">
    <h1>All recipes</h1><br>
<%= link_to "Add recipe" , new_user_recipe_path, class:"btn btn-success"%>


<% @recipes.each do |recipe|%>
<a href="./recipes/<%=recipe.id%>/" class="text-decoration-none">
<div class="d-flex justify-content-around align-items-center recipe-data">
  <div>
   <h3><%=recipe.id%>#<%= recipe.name %></h3>

    <%= link_to 'Delete', user_recipe_path(recipe.user_id,recipe),  data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?" },
      class:"btn btn-danger"%>
  </div>
  <div>
  <p><%= recipe.description %></p>
  </div>
</div>
</a>
<% end %>


</div>